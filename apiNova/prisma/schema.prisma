// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users{
  id String @id @default(uuid())
  Nome String @db.Text()
  Email String @db.Text()
  Senha String @db.Text()
  cpf String @db.Text()
  Telefone String @db.Text()
  Enderecos Enderecos[]
  FavoritesProduct Favoritos[]
  Avaliacoes Avaliacoes[]
  carrinho Carrinho[]
}

model Enderecos{
  id String @id @default(uuid())
  author Users @relation(fields: [idUsuario], references: [id])
  idUsuario String
  Nome String @db.Text()
  Cep String @db.Text()
  Numero String @db.Text()
  Bairro String @db.Text()
  Rua String @db.Text()
  Cidade String @db.Text()
}
model Tokens{
  id String @id @default(uuid())
  Email String @db.Text()
  Token String @db.Text()
}

model Products{
  id String @id @default(uuid())
  NomeProduto String @db.LongText()
  DescProduto String @db.LongText()
  Quantidade Int @db.Int() 
  Preco Decimal @db.Decimal(16,2)
  img String @db.LongText()
  Vendidos Int @db.Int()
  Modelo String @db.Text()
  Marca String @db.Text()
  Enderecos Promocoes[]
  FavoritesProduct Favoritos[]
   Avaliacoes Avaliacoes[]
   carrinho Carrinho[]
 
}
model Promocoes{
  id String @id @default(uuid())
  product Products @relation(fields: [idProduct], references: [id])
  idProduct String
  promovalor Decimal @db.Decimal(16,2)
}

model Favoritos{
  id String @id @default(uuid())
  product Products @relation(fields: [id_product], references: [id])
  id_product String
  user Users @relation(fields: [id_user], references: [id])
  id_user String
}

model Avaliacoes{
  id String @id @default(uuid())
  user Users @relation(fields: [id_user], references: [id])
  id_user String
  product Products @relation(fields: [id_product], references: [id])
  id_product String
  Comentario String @db.LongText()
  Nota Decimal @db.Decimal(2,1)
  Date DateTime  @default(now())
}

model Carrinho{
  id String @id @default(uuid())
  user Users @relation(fields: [id_user], references: [id] )
  id_user String
  produto Products @relation(fields: [id_product], references: [id])
  id_product String
  quantidade Int @default(1)
  valor_unit Decimal @db.Decimal(16,2)
  valor_unit_total Decimal @db.Decimal(16,2)
  valor_frete Decimal? @db.Decimal(16,2) 


}

